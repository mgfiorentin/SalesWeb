@model SalesRecord

<h2>Register new sale</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">

            <div class=" form-group">

                <label class="control-label">Seller ID</label>
                <input asp-for="Seller.Id" class=" form-control" />

            </div>

            <div class=" form-group">

                <label class="control-label">Date</label>
                <input asp-for="Date" class=" form-control" />

            </div>

            <div class=" form-group">
                <label class="control-label">Total amount</label>
                <input asp-for="Amount" class=" form-control" />
            </div>

            <div class=" form-group">
                <label class="control-label">Sale status</label>
                <input type="text" asp-for="SaleStatus" class=" form-control" />
            </div>

            <div class="form-group">
                <input type="submit" value="Register" class="btn btn-success"

            </div>
            <a asp-action="Index" class="btn btn-default">Back to list</a>
        </form>
    </div>
</div>


<hr />